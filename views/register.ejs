<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mercado Liebre Register</title>
<%- include('./partials/styles') %>
</head>
<body>
<%- include('./partials/header') %>

    <form action="/" method="get" class="form-register">
        <div class="form-control">    
            <label for="nombreApellido"><i class="fa-solid fa-signature"></i>Nombre y Apellido:</label>
            <input type="text" name="nombreApellido" placeholder="Juan Perez" required class="txt-control">
        </div>

        <div class="form-control">
            <label for="nombreUsuario"><i class="fa-solid fa-user"></i>Nombre de Usuario:</label>
            <input type="text" name="nombreUsuario" placeholder= "Juan" required class="txt-control">
        </div>

        <div class="form-control">
            <label for="email"><i class="fa-solid fa-envelope"></i>Email:</label>
            <input type="email" name="email" placeholder="juanperez@mercado.com" required class="txt-control">
        </div>

        <div class="form-control"> 
            <label for="fechaNacimiento"><i class="fa-solid fa-calendar"></i>Fecha de Nacimiento:</label>
            <input type="date" name="fechaNacimiento" required class="txt-control">
        </div>

        <div class="form-control">
            <label for="domicilio"><i class="fa-solid fa-location-dot"></i>Domicilio:</label>
            <input type="text" name="domicilio" placeholder="Av. Liebre 545, Temperley" required class="txt-control">
        </div>

        <h3>Perfil de Usuario</h3>

        <div class="form-control-radio">
            <input type="radio" name="comprador">
            <label for="comprador"><i class="fa-brands fa-shopify"></i>Comprador</label>
            <input type="radio" name="vendedor">
            <label for="vendedor"><i class="fa-solid fa-money-check-dollar"></i>Vendedor</label>
        </div>

        <h3>Intereses</h3>

        <div class="form-control-checkbox">
            <input type="checkbox" name="electro">
            <label for="electro">Electro</label>
        </div>

        <div class="form-control-checkbox">
            <input type="checkbox" name="moda">
            <label for="moda">Moda</label>
        </div>

        <div class="form-control-checkbox">
            <input type="checkbox" name="hogar">
            <label for="hogar">Hogar</label>
        </div>

        <div class="form-control-checkbox">
            <input type="checkbox" name="jugueteria">
            <label for="jugueteria">Juguetería</label>
        </div>

        <div class="form-control-checkbox">
            <input type="checkbox" name="vidaSana">
            <label for="vidaSana">Vida sana</label>
        </div>

        <h3><i class="fa-solid fa-camera-retro"></i>Agregue su foto de usuario</h3>
        
        <div class="form-control">
            <input type="file" name="fotoPerfil" accept=".jpg">
        </div>

        <div class="form-control">
            <label for="password"><i class="fa-solid fa-unlock"></i>Contraseña:</label>
            <input type="password" name="password" placeholder="contraseña" required minlength="8" class="txt-control">
        </div>
        
        <div class="form-control">
            <label for="passwordConfirm"><i class="fa-solid fa-unlock"></i>Confirmar Contraseña:</label>
            <input type="password" name="passwordConfirm" placeholder="confirmar contraseña" required class="txt-control">
        </div>

        <div class="form-botones">
            <button type="submit" class="form-boton">Guardar</button>
            <button type="reset" class="form-boton">Borrar</button>
        </div>
    </form>

<%- include('./partials/footer') %>
<!-- fontawesome iconos -->
    <script src="https://kit.fontawesome.com/6cd48854d2.js" crossorigin="anonymous"></script>
</body>
</html>